package ýfElseElseIf;

public class Main {

	public static void main(String[] args) {
		/* SORU 1
        1 adet not deðiþkeni oluþturun. 
        Ardýndan bu girilen notun 50 den büyük olmasý durumunda geçti, 
        düþük olmasý durumunda kaldý yazýsýný ekrana yazdýrýn. */
		
		int not = 70;
		if(not>=50) {
			System.out.println("Geçti");
		}
		else {
			System.out.println("Kaldý");
		}
		System.out.println("-----------------");
		/* SORU 2
        Ýki adet sayý tanýmlayýnýz ve bu sayýlarýn birbirine eþit olmasý durumunda
        ekrana bu iki sayý eþittir yazýsýný verin, eþitsizlik durumunda ise 
        bu iki sayý birbirine eþit deðildir yazýsý ekrana gelsin. */
		
		int sayi1=20, sayi2=30;
		if(sayi1==sayi2) {
			System.out.println("Bu iki sayý birbirine eþittir.");
		}
		else {
			System.out.println("Bu iki sayý birbirine eþit deðildir.");
		}
		System.out.println("-----------------");
		// SORU 3
	       // 2 adet sayý tanýmlayýnýz ve bu sayýlardan büyük olaný ekrana yazdýrýnýz.
		
		int sayi3=20, sayi4=30;
		if(sayi3>sayi4) {
			System.out.println(sayi3);
		}
		else {
			System.out.println(sayi4);
		}
		System.out.println("-----------------");
		// SORU 4
	    // Bir deðiþken içerisinde sayý deðeri atayýnýz. Ardýndan bu sayýnýn çift mi yoksa tek sayý mý olduðunu ekrana yazdýrýnýz.
		int sayi5 = 90;
		if(sayi5%2==0) {
			System.out.println("sayi çifttir");
		}
		else {
			System.out.println("sayý tektir");
		}
		System.out.println("-----------------");
		// SORU 5
        //Öðrencinin harf notunu hesaplayan programý yazýnýz.
        //100-90 arasý AA
        // 89-70 arasý BB
        //69-50 arasý CC
        //49-30 arasý DD
        // 30< FF
		
		int not1=60;
		if(not1<=100 && not1>=90) {
			System.out.println("AA");
		}
		else if(not1<90 && not1>=70){
			System.out.println("BB");
		}
		else if(not1<70 && not1>=50){
			System.out.println("CC");
		}
		else if(not<50 && not1>=30){
			System.out.println("DD");
		}
		else{
			System.out.println("FF");
		}
		
		System.out.println("-----------------");
		//SORU 6
        /* doðru ve yanlis ismiyle 2 adet deðiþken oluþturun ve bunlara birer deðer atayýn. 
        4 yanlýþ 1 doðruyu götürecek þeklinde net hesaplamasýný gerçekleþtiriniz.
        Eðer net 85 e eþit ve büyükse çok baþarýlý,
        Eðer 75 e eþit ve 85 den küçük ise iyi seviye,
        Eðer 55 e eþit ve 75 den küçük ise orta seviye
        Eðer 55 den küçük ise kötü seviye olarak belirterek toplam net sayýsýný ekrana yazdýrýn. */
		
		int dogru = 80;
		int yanlýs = 40;
		float net = dogru-(yanlýs/4);
		System.out.println("Toplam net sayýsý:"+net);
		if(net>=85) {
			System.out.println("çok baþarýlý");
		}
		else if(net<85 && net>=75){
			System.out.println("küçük ise");
		}
		else if(net<75 && net>=55){
			System.out.println("orta seviye");
		}
		else{
			System.out.println("kötü seviye");
		}
		
		System.out.println("-----------------");
		/*Odev1:
		 * 3 tane öðrenci oluþturun ve bu 3 öðrenciye not atamasý gerçekleþtirin ardýndan bu 3 öðrencinin 
		 * notlarýný karþýlaþtýrarak en yüksek nota sahip olan öðrenciyi ekrana yazdýrýn*/
		
		int ogrenci1 = 90;
		int ogrenci2 = 10;
		int ogrenci3 = 95;
		
		
		if(ogrenci1>ogrenci2 && ogrenci1>ogrenci3) {
			
			System.out.println("En Yüksek Not = " + ogrenci1);
		}
		else if(ogrenci2>ogrenci1 && ogrenci2>ogrenci3) {
			System.out.println("En Yüksek Not = " + ogrenci2);
		}
		else {
			System.out.println("En Yüksek Not = " + ogrenci3);
		}
		
		System.out.println("-----------------");
		/*Odev2:
		 * 5 sayi degiskeni olusturun, içlerine deðerlerini atayýn ve bu sayýlarý 7 sayýsý ile çarpma
		 *  iþlemine tabii tutun çarpma iþleminin ardýndan tek olan sayýlarý ekrana yazdýrmaya çalýþýn.*/
		
		int a =20, b=31, c=41, d=50, e=61;
		int sonuc1= 7*a, sonuc2= 7*b, sonuc3= 7*c, sonuc4= 7*d, sonuc5= 7*e;
		
				if(sonuc1%2!=0) {
					System.out.println(sonuc1 + " sayi tektir");
				}
				if(sonuc2%2!=0) {
					System.out.println(sonuc2 + " sayi tektir");
				}
				if(sonuc3%2!=0) {
					System.out.println(sonuc3 + " sayi tektir");
				}
				if(sonuc4%2!=0) {
					System.out.println(sonuc4 + " sayi tektir");
				}
				if(sonuc5%2!=0) {
					System.out.println(sonuc5 + " sayi tektir");
				}
				System.out.println("-----------------");
				
		int hýz = 100;
		if(hýz>90) {
			System.out.println("Radara Girdiniz");
		}
		
				
	}

}
