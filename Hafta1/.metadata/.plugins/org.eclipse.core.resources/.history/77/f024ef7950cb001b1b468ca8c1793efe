package ornekAlistirma;

public class Main {

	public static void main(String[] args) {
		
		/*2 adet sayý tanýmlayýnýz. 
        Ýlk sayýnýn deðeri 8 ikinci sayýnýn deðeri 1,80 olsun. 
        Bu sayýlarýn modunu ve çýkan modu ikinci sayý ile toplamýný ekrana yazdýralým. */
		
		int a = 8;
		double b = 1.80;
		double mod = (a%b) +b;
		System.out.println(mod);
		
		System.out.println("---------------------");
		/*Sonradan deðiþtirilmesi mümkün olmayacak þekilde bir string ifade tanýmlayýnýz 
        ve bu deðiþken içerisine kendi isminizi atayýnýz. Ardýndan sayýsal veri tipinde 
        2 adet 2 basamaklý sayý tanýmlayýnýz ve bu iki sayýyý toplayýp 3 ile çarptýktan sonra 
        2 ye bölün. Tipini belirleyemediðimiz bir deðiþken türü daha oluþturduktan sonra 
        içerisine istediðiniz bir deðeri atayarak tüm bu adýmlarý ekranda yan yana gelecek 
        ve aralarýnda 1 adet boþluk olacak þekilde yazdýrýn. */
		
		final String isim = "Öznur";
		int sayi1 = 24 , sayi2 = 69;
		int sonuc = ((sayi1+sayi2)*3)/2;
		var deger = "2";
		System.out.println(isim+" "+sonuc+" "+deger);
		
		System.out.println("---------------------");
		/*Basit bir öðrenci kaldý geçti iþlemi gerçekleþtirin. 
        Bir deðiþken içerisine 2 adet vize ve final not deðeri atayýn ve bu iki notun ortalamasýný alýn. 
        Boolean tipini kullanarak girilen deðerlerin ortalamasýnýn 50 den büyük olmasý 
        durumunda geçti yani true ifadesi ekrana yazýlsýn, notun ortalamasýnýn 
        50 den küçük olmasý durumunda kaldý anlamý taþýyan false ifadesi ekrana gelsin. */
		
		int vize = 65 , finalNotu = 80 ;
		int ortalama = (vize+finalNotu)/2 ;
		boolean sonuç = (ortalama >= 50);
		System.out.println(sonuç);
		
		System.out.println("---------------------");
		/*3 adet sayý tanýmlayýnýz ve ekrana çýktý olarak
        Bu sayýlarýn toplamý: 3 sayýnýn toplamý sonucunu yazdýrýn. */
		
		int sayibir = 25, sayiiki = 80, sayiuc = 225;
		int toplam = sayibir+sayiiki+sayiuc;
		System.out.println("Bu sayýlarýn toplamý:" + toplam);
		
		System.out.println("---------------------");
		
		/*Ýnt sayi1 = 80; int sayi2=25 þeklinde iki deðiþken 
        ve deðer atamasý saðlayýn ardýndan bu verilerin birbirleriyle 
        eþit olup olmama durumunu karþýlaþtýrýn ve 4 iþlem deðiþkenleri 
        oluþturarak 4 iþlem gerçekleþtirin ekrana çýktýsýný veriniz. */
		
		int sayia=80 , sayib=25;
        boolean esitMi = (sayia==sayi2);
        int toplama = (sayia+sayib);
        int cikarma = (sayia-sayib);
        int carpma = (sayia*sayib);
        int bolme = (sayi1/sayib);
        System.out.println(esitMi);
        System.out.println("Toplama: " + toplama +" "+ "Çýkartma: " + cikarma +" "+"Çarpma: " + carpma + " "+ "Bölme: " + bolme);
        
		System.out.println("---------------------");
		
		int deger1 =20;
		int deger2 =5;
		int topla = (deger1+deger2);
        int cikar = (deger1-deger2);
        int carp = (deger1*deger2);
        int bol = (deger1/deger2);
        System.out.println("Toplama: " + topla +" "+ "Çýkartma: " + cikar +" "+"Çarpma: " + carp + " "+ "Bölme: " + bol);

	}

}
